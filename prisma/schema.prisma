model Question {
  id        String   @id @default(cuid())
  text      String   @db.Text // The content of the question
  authorId  String   // Foreign key to the Teacher who created it
  author    Teacher  @relation(fields: [authorId], references: [id])
  keyNotions Json?

  // A single Question template can be used in many live sessions
  questionSessions QuestionSession[]
  plannedIn        PlannedQuestion[]
}

model PlannedQuestion {
  id          String    @id @default(cuid())

  promotionId String
  promotion   Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)

  questionId  String
  question    Question  @relation(fields: [questionId], references: [id], onDelete: Cascade)

  startingOn  DateTime?
  endingOn    DateTime?
}

model QuestionSession {
  id          String    @id @default(cuid())

  questionId  String
  question    Question  @relation(fields: [questionId], references: [id])

  promotionId String
  promotion   Promotion @relation(fields: [promotionId], references: [id])

  startedAt   DateTime  // When the session was started
  endsAt      DateTime  // When students can no longer answer
  status      String    // e.g., "PENDING", "ACTIVE", "CLOSED", "GRADING"

  // A session aggregates all the answers
  answers     Answer[]
}

model Answer {
  id                String   @id @default(cuid())

  questionSessionId String
  questionSession   QuestionSession @relation(fields: [questionSessionId], references: [id], onDelete: Cascade)

  studentId         String
  student           Student @relation(fields: [studentId], references: [id])

  text              String   @db.Text // The student's answer
  submittedAt       DateTime @default(now())

  // Fields for the future LLM assessment
  grade             Float?
  assessment        String?  @db.Text

  // Enforce that a student can only answer once per session
  @@unique([questionSessionId, studentId])
}
